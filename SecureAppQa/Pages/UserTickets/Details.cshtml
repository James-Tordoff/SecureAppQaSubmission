@page
@model SecureAppQa.Pages.UserTickets.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
@if (Model.ErrorMessage != "")
{
    <div>
        <h4>@Model.ErrorMessage</h4>
    </div>
}
<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.IsActive)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Ticket?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
